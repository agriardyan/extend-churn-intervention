# AccelByte Gaming Services Configuration
AB_BASE_URL=https://demo.accelbyte.io
AB_NAMESPACE=accelbyte
AB_CLIENT_ID=
AB_CLIENT_SECRET=

# Item IDs configured in AGS Admin Portal
# See config/pipeline.yaml for how these are used in the intervention rules
REWARD_ITEM_ID=speed_booster

# Redis Configuration
# Mode: auto (try external, fallback to embedded), external (force external), embedded (force embedded)
REDIS_MODE=auto
# Redis Connection (for external mode)
REDIS_HOST=localhost
REDIS_PORT=6379
REDIS_PASSWORD=
REDIS_DB=0
# Redis Client Settings
REDIS_MAX_RETRIES=5
REDIS_RETRY_DELAY_MS=1000

# OpenTelemetry Configuration (optional, for tracing)
OTEL_EXPORTER_ZIPKIN_ENDPOINT=http://host.docker.internal:9411/api/v2/spans
OTEL_SERVICE_NAME=ExtendAntiChurnHandler

# gRPC Debug (optional)
# GRPC_GO_LOG_VERBOSITY_LEVEL=99
# GRPC_GO_LOG_SEVERITY_LEVEL=info
